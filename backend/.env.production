# Azure Production Environment Variables
NODE_ENV=production
PORT=8080

# Database (Azure Cosmos DB with MongoDB API)
MONGODB_URI=${COSMOS_DB_CONNECTION_STRING}

# JWT Configuration
JWT_SECRET=${JWT_SECRET_FROM_KEYVAULT}
JWT_EXPIRES_IN=7d

# CORS Configuration for Production
CORS_ORIGIN=https://taskmanager-frontend.azurestaticapps.net

# Azure App Service specific
WEBSITE_NODE_DEFAULT_VERSION=18.17.0
WEBSITE_RUN_FROM_PACKAGE=1

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=${APPINSIGHTS_KEY}

# Health check endpoint
HEALTH_CHECK_PATH=/api/health
